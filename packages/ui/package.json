		"autoprefixer": "^10.4.20",
		"eslint-plugin-storybook": "^0.8.0",
		"postcss": "^8.4.41",
		"react": "^18.3.1",
		"rollup-plugin-preserve-directives": "^0.4.0",
		"sass": "^1.77.8",
		"storybook": "^8.2.9",
