{% liquid
	# Relative to entrypointsDir
	render 'vite-tag' with '/src/elements/StarRating.tsx'
%}

{% style %}
	{{ block.settings.custom_css }}
{% endstyle %}

<star-rating-element
	default-rating='{{ block.settings.default_rating }}'
></star-rating-element>

{% schema %}
{
	"name": "Star Rating Extension",
	"target": "section",
	"settings": [
		{
			"type": "textarea",
			"id": "custom_css",
			"label": "Custom CSS",
			"default": ".test2 { background-color: red }"
		},
		{
			"type": "range",
			"id": "default_rating",
			"min": 1,
			"max": 5,
			"step": 1,
			"label": "Default Rating",
			"default": 3
		}
	]
}
{% endschema %}
